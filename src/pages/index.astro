---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";

import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);

// Filter by Category (Include ALL posts, featured or not)

const epPosts = sortedPosts.filter(({ data }) =>
  data.tags.some(tag =>
    [
      "electrophysiology",
      "cardiology",
      "arrhythmia",
      "atrial flutter",
    ].includes(tag.toLowerCase())
  )
);

const pythonPosts = sortedPosts.filter(({ data }) =>
  data.tags.some(tag =>
    [
      "python",
      "coding",
      "machine learning",
      "web development",
      "tutorial",
    ].includes(tag.toLowerCase())
  )
);

// Fallback for anything else not captured above
const otherPosts = sortedPosts.filter(
  ({ data }) =>
    !data.tags.some(tag =>
      [
        "electrophysiology",
        "cardiology",
        "arrhythmia",
        "atrial flutter",
        "python",
        "coding",
        "machine learning",
        "web development",
        "tutorial",
      ].includes(tag.toLowerCase())
    )
);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      Hi, I'm Aashish
    </section>

    <p>
      Welcome to my technical blog! Here I share my journey in Machine Learning,
      AI, and Software Development.
    </p>
    <p class="mt-2">
      Feel free to check out my
      <LinkButton
        class="underline decoration-dashed underline-offset-4 hover:text-accent"
        href="/posts/"
      >
        latest posts
      </LinkButton>
      or read more
      <LinkButton
        class="underline decoration-dashed underline-offset-4 hover:text-accent"
        href="/about/"
      >
        about me
      </LinkButton>.
    </p>
    {
      // only display if at least one social link is enabled
      SOCIALS.length > 0 && (
        <div class="mt-4 flex max-sm:flex-col sm:items-center">
          <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
          <Socials />
        </div>
      )
    }

    <div class="mt-6 flex w-full max-w-md">
      <form action="/search" method="get" class="w-full">
        <div class="relative">
          <input
            type="text"
            name="q"
            placeholder="Search topics..."
            class="w-full rounded-md border border-border bg-transparent px-4 py-2 pr-10 focus:border-accent focus:outline-none"
          />
          <button
            type="submit"
            class="absolute top-0 right-0 h-full px-3 text-accent hover:text-accent/80"
            aria-label="Submit search"
          >
            <IconSearch class="h-6 w-6" />
          </button>
        </div>
      </form>
    </div>
  </main>

  {
    epPosts.length > 0 && (
      <section id="ep-posts" class="pt-12 pb-6">
        <h2 class="text-2xl font-semibold tracking-wide">
          Cardiac Electrophysiology
        </h2>
        <ul>
          {epPosts.map(data => (
            <Card variant="h3" {...data} />
          ))}
        </ul>
      </section>
    )
  }

  {
    pythonPosts.length > 0 && (
      <section id="python-posts" class="pt-12 pb-6">
        <h2 class="text-2xl font-semibold tracking-wide">
          Python & Development
        </h2>
        <ul>
          {pythonPosts.map(data => (
            <Card variant="h3" {...data} />
          ))}
        </ul>
      </section>
    )
  }

  {
    otherPosts.length > 0 && (
      <section id="other-posts" class="pt-12 pb-6">
        <h2 class="text-2xl font-semibold tracking-wide">Other Posts</h2>
        <ul>
          {otherPosts.map(data => (
            <Card variant="h3" {...data} />
          ))}
        </ul>
      </section>
    )
  }

  <div class="my-8 text-center">
    <LinkButton href="/posts/">
      All Posts
      <IconArrowRight class="inline-block rtl:-rotate-180" />
    </LinkButton>
  </div>
</Layout>
<Footer />

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
